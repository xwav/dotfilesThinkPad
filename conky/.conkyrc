conky.config = {
    alignment = 'top_left',
    background = true,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'gray',
    default_outline_color = 'white',
    default_shade_color = 'white',
    color1 = 'white',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'Roboto Mono:size=9',
    gap_x = 10,
    gap_y = 45,
    minimum_height = 250,
    minimum_width = 220,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_class = 'override',
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_argb_value = 0,
    own_window_type = 'override',
    own_window_hints ='undecorated,sticky,skip_taskbar,skip_pager,below',
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
}

conky.text = [[
${color1}${font ConkySymbols:size=11}${font} ${voffset -10} System» $hr${color}
${color1}${goto 25}CPU       : ${alignr}${cpu cpu0}%
${color1}${goto 25}Uptime  : ${color}$uptime_short 
${color1}${goto 25}Load     : ${color}${loadavg}

${color1}${font ConkySymbols:size=11}${font} ${voffset -10} Temperature» $hr${color}
${color1}${goto 25}CPU: ${color}${alignr}${exec sensors | grep 'temp1' | awk 'NR==1{print $2}'} ${alignr}${color1}

${color1}${font ConkySymbols:size=11}${font} ${voffset -10}Memory» $hr${color}
${color1}${goto 25}RAM      : ${color}$mem/$memmax ${alignr}$memperc%
${color1}${goto 25}SWAP    : ${color}$swap/$swapmax $alignr}$swapperc%

${color1}${goto 25}Processes: ${color}$processes ${color1}Running: ${color}$running_processes

${color1}${font ConkySymbols:size=11}${font} ${voffset -10} Storage» $hr${color}
${color1}${goto 35}ROOT    : ${color}${fs_used /}/${fs_size /} ${alignr}${fs_used_perc /}%

${color1}${font ConkySymbols:size=11}${font} ${voffset -10} Wireless» $hr${color}
${color1}${goto 25}SSID          : ${color}${wireless_essid  wlp0s20f3} ${color1}${alignr}Signal: ${color}${wireless_link_qual_perc  wlp0s20f3}%
${color1}${goto 25}Bitrate      : ${color}${wireless_bitrate  wlp0s20f3}
${color1}${goto 25}Total Down/Up : ${color}${totaldown wlp0s20f3}/${totalup wlp0s20f3}
${color1}${goto 25}Speed Down/Up : ${color}${downspeed wlp0s20f3}/${upspeed wlp0s20f3}
${color1}${goto 25}IP address : ${color}${addr wlp0s20f3}

${color1}${font ConkySymbols:size=11}${font} ${voffset -10} LAN» $hr${color}
${color1}${goto 25}Total Down/Up :    ${color}${totaldown enp0s25} / ${totalup enp0s25}
${color1}${goto 25}Speed Down/Up : ${color}${downspeed enp0s25} / ${upspeed enp0s25}
${color1}${goto 25}IP address : ${color}${addr enp0s25}


]]
